{
    "name": "litrpg-studio/backend",
    "description": "Backend API for LitRPG Studio",
    "type": "project",
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "illuminate/database": "^10.0",
        "illuminate/events": "^10.0",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.0",
        "respect/validation": "^2.2",
        "ramsey/uuid": "^4.9",
        "firebase/php-jwt": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public/",
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR12 src/ tests/",
        "cs-fix": "phpcbf --standard=PSR12 src/ tests/",
        "production-install": "composer install --no-dev --optimize-autoloader --classmap-authoritative",
        "vendor-cleanup": [
            "@php scripts/vendor-cleanup.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        },
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "apcu-autoloader": true
    }
}
