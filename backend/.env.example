DB_DRIVER=sqlite
DB_DATABASE=database/litrpg_studio.sqlite
DB_PREFIX=

# JWT Configuration
webhatch_CRET=replace-with-frontpage-jwt-secret
webhatch_PIRATION=31536000

# API Configuration
API_VERSION=v1
API_BASE_URL=http://localhost:8080

# LitRPG Studio Configuration
AUTO_SAVE_INTERVAL=30
CONSISTENCY_CHECK_ENABLED=true
ANALYTICS_ENABLED=true
BACKUP_INTERVAL=3600

# Writing Settings
DEFAULT_WORD_COUNT_TARGET=2000
AUTO_SAVE_DRAFTS=true
VERSION_CONTROL_ENABLED=true

# AI Integration (Optional)
OPENAI_API_KEY=your-openai-api-key-here
AI_WRITING_ASSISTANCE=false
AI_CONSISTENCY_CHECKING=false

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Cache Configuration
CACHE_TTL=3600
ENABLE_CACHE=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# File Upload Configuration
MAX_UPLOAD_SIZE=10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# Session Configuration
SESSION_LIFETIME=7200
CLEANUP_INTERVAL=3600

APP_ENV=development
APP_DEBUG=true
